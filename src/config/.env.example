# ============================================================
# REMOTE databáza (školský server - len čítanie)
# ============================================================
REMOTE_DB_HOST=publikace.k.utb.cz
REMOTE_DB_PORT=5432
REMOTE_DB_NAME=publikace
REMOTE_DB_USER=veda2-ro
REMOTE_DB_PASSWORD=pass

# ============================================================
# LOKÁLNA databáza (tvoj lokálny PostgreSQL)
# ============================================================
LOCAL_DB_HOST=127.0.0.1
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=veda_local
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=postgres

# ============================================================
# Kopírovanie tabuľky
# ============================================================
# Schéma a tabuľka na remote DB
REMOTE_SCHEMA=veda
REMOTE_TABLE=utb_metadata_arr

# Lokálna schéma a tabuľka
LOCAL_SCHEMA=public
LOCAL_TABLE=utb_metadata_arr

# Koľko riadkov sa kopíruje v jednej dávke (0 = všetky)
COPY_BATCH_SIZE=500

# Maximálny počet riadkov na kopírovanie (0 = bez limitu)
COPY_LIMIT=0

# ============================================================
# UTB kľúčové slová pre detekciu afiliácie
# (oddelené čiarkou, case-insensitive, bez diakritiky)
# ============================================================
UTB_KEYWORDS="tomas bata univ,tomas bata university,tbu,univerzita tomase bati,utb zlin,utb,t. bata univ,zlin"
# pridat dalsie
# mozno aj uherske hradiste ak nieco take najdem

# ============================================================
# Heuristiky - nastavenia
# ============================================================
# Minimálna podobnosť mena pre fuzzy matching (0.0 - 1.0)
AUTHOR_MATCH_THRESHOLD=0.90

# Veľkosť dávky pri spúšťaní heuristík
HEURISTICS_BATCH_SIZE=200

# ============================================================
# LLM nastavenia
# ============================================================
# Provider: ollama alebo openai
LLM_PROVIDER=openai

# Ollama endpoint
LOCAL_LLM_BASE_URL=http://localhost:11434
LOCAL_LLM_MODEL=qwen3:8b

# OpenAI / kompatibilný cloud endpoint
OPENAI_API_KEY=gsk_password
OPENAI_BASE_URL=https://api.groq.com/openai/v1
OPENAI_MODEL=llama-3.3-70b-instant

# Veľkosť dávky pri LLM spracovaní
LLM_BATCH_SIZE=1

# Timeout pre LLM požiadavku (sekundy)
LLM_TIMEOUT=300
LLM_MAX_RETRIES=2
LLM_RETRY_BASE_DELAY=1.5

