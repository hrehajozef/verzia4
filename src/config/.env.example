# Remote PostgreSQL (read)
REMOTE_DB_HOST=publikace.k.utb.cz
REMOTE_DB_PORT=1111
REMOTE_DB_NAME=publikace
REMOTE_DB_USER=veda2-ro
REMOTE_DB_PASSWORD=change-me

# Local PostgreSQL (write)
LOCAL_DB_HOST=127.0.0.1
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=veda_local
LOCAL_DB_USER=user
LOCAL_DB_PASSWORD=pass

# Source table (remote)
REMOTE_SCHEMA=veda
REMOTE_TABLE=utb_metadata_arr

# Target table (local)
LOCAL_SCHEMA=public
LOCAL_TABLE=utb_metadata_arr

# Bootstrap copy options
COPY_BATCH_SIZE=500
COPY_LIMIT=0

# UTB affiliation keywords (comma separated)
UTB_KEYWORDS="tomas bata univ,tomas bata university,univerzita tomase bati,utb zlin,t. bata univ"

# Heuristics
AUTHOR_MATCH_THRESHOLD=0.85
HEURISTICS_BATCH_SIZE=200

# LLM provider options
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

LLM_BATCH_SIZE=20
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_RETRY_BASE_DELAY=1.5
